@model PartyInvites.Models.GuestResponse
@{
 Layout = null;
}
<!DOCTYPE html>
<html>
<head>
 <meta name="viewport" content="width=device-width" />
 <title>RsvpForm</title>
 <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
 <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
 <h5 class="bg-primary text-white text-center m-2 p-2">ENTRY FORM</h5>
 <form  asp-action="RsvpForm" method="post" class="m-2">
 <div asp-validation-summary="All"></div>
 <div class="form-group">
 <label asp-for="FirstName" class="form-label">Your Firstname:</label>
 <input asp-for="FirstName" class="form-control"/>
 </div>
 <div class="form-group">
 <label asp-for="LastName" class="form-label">Your Surname:</label>
 <input asp-for="LastName" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="CardNumber" class="form-label">Your Card number:</label>
 <input asp-for="CardNumber" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="Phone" class="form-label">Your phone:</label>
 <input asp-for="Phone" class="form-control"/>
 </div>
 <div class="form-group">
 <label asp-for="WillAttend" class="form-label">Are you willing to join the study?</label>
 <select asp-for="WillAttend" class="form-control">
 <option value="">Choose an option</option>
 <option value="true">Yes, I'll join</option>
 <option value="false">No, I am not interested</option>
 </select>
 </div>
 <button type="submit" class="btn btn-primary mt-3">Submit FORM</button>
 </form>
</body>
</html>